%Utility functions

% hex: hex value to convert, l: length of the binary vector
function binVector = hex2BinVector(hex, l)
    binVector = hex2poly(hex);
    if length(binVector) < l % if necessary add padding
        binVector = [zeros(1, l-length(binVector)) binVector];
    end
end
 
function hex = binVector2Hex(poly)
     hex = dec2hex(bin2dec(num2str(poly)));
end
